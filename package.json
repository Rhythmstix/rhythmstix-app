{
  "name": "rhythmstix",
  "version": "0.1.1",
  "description": "Rhythmstix Lesson Viewer",
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac",
    "build1": "npm run build && electron-builder build --mac --win --publish never",
    "deploy": "npm run build && electron-builder build --mac --win --publish always"
  },
  "dependencies": {
    "@capacitor-community/electron": "^1.3.1",
    "electron-updater": "^4.3.9",
    "request": "^2.88.2",
    "unzipper": "^0.10.11"
  },
  "devDependencies": {
    "electron": "~10.3.1",
    "electron-builder": "^22.9.1",
    "electron-notarize": "^1.0.0",
    "typescript": "~4.0.5"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rhythmstix/rhythmstix-app.git"
  },
  "build": {
    "appId": "uk.co.rhythmstix.app",
    "productName": "Rhythmstix",
    "publish": [
      {
        "provider": "github",
        "owner": "Rhythmstix",
        "repo": "rhythmstix-app",
        "releaseType": "release"
      }
    ],
    "buildVersion": "1",
    "afterSign": "./resources/afterSignHook.js",
    "directories": {
      "buildResources": "resources"
    },
    "copyright": "Copyright Â© 2020 Rhythmstix",
    "files": [
      "assets/*",
      "build/*",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg",
      "icon": "./build/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "./resources/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis",
      "certificateFile": "../credential/CERTIFICATE.pfx",
      "certificatePassword": "rhythmstix",
      "icon": "./assets/icon-512x512.png"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false
    }
  }
}
